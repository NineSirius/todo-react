{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "paths": {
            "@containers/*": [
                "containers/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@types/*": [
                "types/*"
            ]
        },
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "target": "ESNext",
        "types": [
            "vite/client"
        ],
        "isolatedModules": true,
    },
    "include": [
        "src"
    ]
}